generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Settings {
  guildId                 String  @id
  voiceStateUpdateChannel String?
  radioStation            String?
  autoRadioVoiceChannel   String?
  autoRole                String?
  welcomeChannel          String?
  goodbyeChannel          String?
  chatbotChannel          String?
  chatBotSystemPrompt     String? @default("You are a helpful and smart assistant writing on Discord guild.. You are able to adapt your language to the one in which the user is writing. Use emoticons to make the conversation more engaging (though not too often!).")
  chatBotTemperature      Int?    @default(1)
  chatBotMaxTokens        Int?    @default(1024)
  chatbotAPIKey           String?
}

model Users {
  type        String  @default("normal")
  userId      String  @id
  usedCommand Boolean
}

model Custombots {
  id       Int    @default(autoincrement())
  userId   String
  clientId String
  token    String
  activity String @default("Skyndalex v2.0 | discord.skyndalex.com")
  status   String @default("offline")

  @@id([id, userId])
}

model Cases {
  id        Int      @id @default(autoincrement())
  guildId   String
  userId    String
  type      String?
  reason    String?
  date      BigInt?
  moderator String
  duration  String?
  active    Boolean?
}

model Favourties {
  id        Int    @id @default(autoincrement())
  userId    String
  radioId   String
  radioName String
}

model CustomBotSettings {
  userId                String
  clientId              String  @unique
  radioStation          String?
  autoRadioVoiceChannel String?
  guildId               String
}

model Petitions {
  id          Int    @id @default(autoincrement())
  author      String
  signedCount Int
}

model AlreadySignedPetitions {
  id         Int    @id @default(autoincrement())
  userId     String
  petitionId Int
}
