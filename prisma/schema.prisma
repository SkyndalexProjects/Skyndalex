generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model settings {
  guildId                 String   @id
  voiceStateUpdateChannel String?
  radioStation            String?
  autoRadioVoiceChannel   String?
  // autoRole                String?
  ticketArchiveCategory    String?
  // welcomeChannel         String?
  // goodbyeChannel         String?
  // antiPhishing            Boolean?
}
model users {
  type String @default("normal")
  userId    String @id
}
model custombots {
  id       Int      @default(autoincrement())
  userId String
  clientId String 
  token String  
  activity String @default("Skyndalex v2.0 | discord.skyndalex.com")
  status String @default("offline")
  
  @@id([id, userId])
}
model cases {
  id        Int      @id @default(autoincrement())
  guildId   String
  userId    String
  type      String?
  reason    String?
  date      BigInt?
  moderator String
  duration  String?
  active    Boolean?
}

model economy {
  guildId   String
  userId    String
  bank      String?
  wallet    String?

  @@id([guildId, userId])
}
model favourties {
  id     Int      @id @default(autoincrement())
  userId String
  radioId String
  radioName String
}
model customBotSettings {
  userId String 
  clientId String @unique
  radioStation String?
  autoRadioVoiceChannel String?
  guildId String
}