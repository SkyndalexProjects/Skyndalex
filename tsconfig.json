{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "module": "esnext",
    "outDir": "dist",
    "moduleResolution": "Node",
    "baseUrl": "src",
    "paths": {
      "#*": ["*/index.ts"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  }
}